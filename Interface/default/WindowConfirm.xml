<?xml version="1.0" encoding="UTF-8" ?>
<XML ID="WindowConfirm">
	<Schema xmlns="MaietData" xmlns:dt="MaietDataTypes"/>
	
	<!-- Change the message window to switch to Windowed Mode -->
	<FRAME item="WindowConfirm">
		<FRAMELOOK>DefaultFrameLook</FRAMELOOK>
		<BOUNDS>
			<X>0</X>
			<Y>0</Y>
			<W>320</W>
			<H>180</H>
		</BOUNDS>
		<ALIGN>
			<HALIGN>center</HALIGN>
			<VALIGN>center</VALIGN>
		</ALIGN>
		<RESIZABLE>false</RESIZABLE>
		<VISIBLE>false</VISIBLE>
		<TEXT>STR:UI_WINDOW_01</TEXT> <!-- Switch to Windowed Mode -->
	</FRAME>
	
	<TEXTAREA item="WindowConfirm_LABEL" parent="WindowConfirm" >
		<BOUNDS>
			<X>10</X>
			<Y>30</Y>
			<W>300</W>
			<H>80</H>
		</BOUNDS>
		<ANCHORS>
			<LEFT>true</LEFT>
			<TOP>true</TOP>
			<RIGHT>true</RIGHT>
			<BOTTOM>true</BOTTOM>
		</ANCHORS>
		<ALIGN>
			<HALIGN>center</HALIGN>
			<VALIGN>center</VALIGN>
		</ALIGN>
		<TEXT>STR:UI_WINDOW_02</TEXT> <!-- Restart the Gunz program in order to switch to Windowed Mode. Exit the program now? -->
		<EDITABLE>false</EDITABLE>
	</TEXTAREA>
	
	<BUTTON item="WindowChangeRestart" parent="WindowConfirm">
		<BUTTONLOOK>DefaultButtonLook</BUTTONLOOK>
		<ANCHORS>
			<LEFT>true</LEFT>
			<TOP>true</TOP>
			<RIGHT>true</RIGHT>
			<BOTTOM>true</BOTTOM>
		</ANCHORS>
		<BOUNDS>
			<X>68</X>
			<Y>120</Y>
			<W>120</W>
			<H>32</H>
		</BOUNDS>
		<DEFAULTKEY>ENTER</DEFAULTKEY>
		<TEXT>STR:UI_WINDOW_03</TEXT> <!-- OK -->
	</BUTTON>
	<BUTTON item="WindowChangeCancel" parent="WindowConfirm">
		<BUTTONLOOK>DefaultButtonLook</BUTTONLOOK>
		<ANCHORS>
			<LEFT>true</LEFT>
			<TOP>true</TOP>
			<RIGHT>true</RIGHT>
			<BOTTOM>true</BOTTOM>
		</ANCHORS>
		<BOUNDS>
			<X>190</X>
			<Y>120</Y>
			<W>120</W>
			<H>32</H>
		</BOUNDS>
		<DEFAULTKEY>ESC</DEFAULTKEY>
		<TEXT>STR:UI_WINDOW_04</TEXT> <!-- Cancel -->
	</BUTTON>
</XML>